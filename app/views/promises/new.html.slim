.promise
  .heading__wrapper
    .heading__content
      h2.heading__title 山のぼる日にちを決めよう
  = form_for @promise do |f|
    .promise__field
      = f.label :promise_time, class: 'form__label'
      .promise__select__area
        = f.datetime_select :promise_time, { use_month_numbers: true,
                start_year:     Time.now.year,
                end_year:       (Time.now.year + 18),
                default:        Date.today,
                date_separator: '/' }, { class: 'form__select promise__select' }
      p = f.submit "この日程で山に登る", class: 'form__btn'
  = render 'shared/link'
